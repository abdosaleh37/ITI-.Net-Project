@model Product

@{
}

<h1 style="color:red">Are You Sure You Want To Delete This Product</h1>
<table class="table text-center">
    <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="col">Product Id</th>
            <th scope="col">@Model.ProductId</th>
        </tr>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">@Model.Title</th>
        </tr>
    </tbody>
</table>
<form asp-controller="Product" asp-action="Remove" asp-route-id="@Model.ProductId" method="post" class="d-inline">
    <button type="submit" class="btn btn-danger mx-2">Delete</button>
</form>
<a asp-controller="Product" asp-action="Index" class="btn btn-secondary mx-2">Back</a>